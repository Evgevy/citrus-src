            li.header__item 
                a(href="#!").header__link Техноблог
            li.header__item 
                a(href="#!").header__link Контакты
                
        .header__contacts 
            .header__social 
                a(href="#!")
                    +icon('what', 42, 42)
                a(href="#!")
                    +icon('tel', 42, 42)
            .header__next 
                a(href="tel:+ 7 (777) 777-77-77") + 7 (777) 777-77-77
